{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Development",
            "request": "launch",
            "type": "dart",
            "program": "lib/main/main_development.dart",
            "args": [
                "--flavor",
                "development",
                "--target",
                "lib/main/main_development.dart",
                "--dart-define"
            ]
        },
        {
            "name": "Launch Production",
            "request": "launch",
            "type": "dart",
            "program": "lib/main/main_production.dart",
            "flutterMode": "release",
            "args": [
                "--flavor",
                "production",
                "--target",
                "lib/main/main_production.dart"
            ]
        },
        {
            "name": "Launch UI Gallery",
            "request": "launch",
            "type": "dart",
            "program": "packages/app_ui/gallery/lib/main.dart"
        }
    ]
}
